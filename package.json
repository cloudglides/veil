{
  "name": "@cloudglides/veil",
  "version": "1.0.0",
  "description": "Math-based deterministic browser fingerprinting library",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "example"
  ],
  "scripts": {
    "build": "tsup",
    "build:all": "pnpm run build:wasm && pnpm run build && pnpm run build:example",
    "build:example": "pnpm -C example build",
    "dev": "tsup --watch",
    "build:wasm": "wasm-pack build veil-core --target web",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "example:dev": "pnpm -C example dev"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "jsdom": "^23.0.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.0.0"
  }
}
